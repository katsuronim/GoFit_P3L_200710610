<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Instruktur.Fragment.ProfileInstrukturFragment">

    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/user">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="170dp"
        android:text="Profile"
        android:fontFamily="sans-serif-black"
        android:textSize="30dp"
        android:textColor="#000000"
        >
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="170dp"
        android:text="Instruktur"
        android:fontFamily="sans-serif-black"
        android:textSize="30dp"
        android:textColor="#000000"
        >
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="165dp"
        android:layout_marginLeft="40dp"
        android:text="Nama Instrukur    : "
        android:fontFamily="sans-serif-black"
        android:textSize="15dp"
        android:textColor="#000000"
        >
    </TextView>

    <TextView
        android:id="@+id/txtNama"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="165dp"
        android:fontFamily="sans-serif-light"
        android:text="Joko jokoko"
        android:textColor="#000000"
        android:textSize="15dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="40dp"
        android:text="ID Instrukur           : "
        android:fontFamily="sans-serif-black"
        android:textSize="15dp"
        android:textColor="#000000"
        >
    </TextView>

    <TextView
        android:id="@+id/txtId"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="200dp"
        android:fontFamily="sans-serif-light"
        android:text="1"
        android:textColor="#000000"
        android:textSize="15dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="235dp"
        android:layout_marginLeft="40dp"
        android:text="Alamat Instrukur  : "
        android:fontFamily="sans-serif-black"
        android:textSize="15dp"
        android:textColor="#000000"
        >
    </TextView>

    <TextView
        android:id="@+id/txtAlamat"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="235dp"
        android:fontFamily="sans-serif-light"
        android:text="Jln. Rumah Ins 1"
        android:textColor="#000000"
        android:textSize="15dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="265dp"
        android:layout_marginLeft="40dp"
        android:text="Tanggal Lahir        : "
        android:fontFamily="sans-serif-black"
        android:textSize="15dp"
        android:textColor="#000000"
        >
    </TextView>

    <TextView
        android:id="@+id/txtTanggalLahir"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="265dp"
        android:fontFamily="sans-serif-light"
        android:text="2002-11-30"
        android:textColor="#000000"
        android:textSize="15dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="295dp"
        android:layout_marginLeft="40dp"
        android:text="Nomor Telepon     : "
        android:fontFamily="sans-serif-black"
        android:textSize="15dp"
        android:textColor="#000000"
        >
    </TextView>

    <TextView
        android:id="@+id/txtNoTelp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="295dp"
        android:fontFamily="sans-serif-light"
        android:text="081234567890"
        android:textColor="#000000"
        android:textSize="15dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="40dp"
        android:text="Email Instruktur    : "
        android:fontFamily="sans-serif-black"
        android:textSize="15dp"
        android:textColor="#000000"
        >
    </TextView>

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="330dp"
        android:fontFamily="sans-serif-light"
        android:text="email@gmail.com"
        android:textColor="#000000"
        android:textSize="15dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="40dp"
        android:text="Total terlambat     : "
        android:fontFamily="sans-serif-black"
        android:textSize="15dp"
        android:textColor="#000000"
        >
    </TextView>

    <TextView
        android:id="@+id/txtKeterlambatan"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="400dp"
        android:fontFamily="sans-serif-light"
        android:text="1000 detik"
        android:textColor="#000000"
        android:textSize="15dp">
    </TextView>

    <Button
        android:id="@+id/btnHistori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Histori Aktivitas"
        android:layout_marginStart="110dp"
        android:layout_marginTop="500dp"
        >
    </Button>

</FrameLayout>